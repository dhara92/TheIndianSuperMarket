        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" asp-action="HomePage" asp-controller="Home" asp-route-Cust_ID="@HttpContextAccessor.HttpContext.Session.GetString("CustomerID")">The Indian SuperMarket</a>
