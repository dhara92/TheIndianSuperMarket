                                <a class="dropdown-item" asp-action="Checkout" asp-controller="Home">Checkout</a>
                            </div>
                        </li>
                        <li class="nav-item"><a asp-action="About" asp-controller="Home" class="nav-link">About</a></li>
                        <li class="nav-item"><a asp-action="Contact" asp-controller="Home" class="nav-link">Contact</a></li>
                        <li class="nav-item cta cta-colored"><a asp-action="Index" asp-controller="Carts" class="nav-link"><span class="icon-shopping_cart"></span>[@HttpContextAccessor.HttpContext.Session.GetString("TotalItem")]</a></li>
                    </ul>
                </div>
            </div>
