@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @model TheIndianSuperMarket.Models.Customers
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>The Indian SuperMarket</title>
        <link rel="stylesheet" href="~/css/login.css" />
    </head>
    <body>
        <div class="container" id="container">
            <div class="form-container sign-up-container">
                <form asp-action="Create" asp-controller="Customers">
                    <h1>Create Account</h1>
                    <div class="form-group">
                        <input asp-for="CustomerFirstName" id="name" type="text" placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <input asp-for="CustomerLastName" id="name" type="text" placeholder="Last Name" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Address" id="name" type="text" placeholder="Address" />
                    </div>
                    <div class="form-group">
                        <input asp-for="City" id="name" type="text" placeholder="City" />
                    </div>
                    <div class="form-group">
                        <input asp-for="PostalCode" id="name" type="text" placeholder="Postal Code" />
                    </div>
                    <div class="form-group">
                        <input asp-for="CustomerPhone" id="name" type="text" placeholder="Phone" />
                    </div>
                    <div class="form-group">
                        <input asp-for="CustomerEmail" id="mail" type="email" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" id="pass" type="password" placeholder="Password" />
                    </div>
                    <button type="submit" value="">Sign Up</button>
                </form>
            </div>
            <div class="form-container sign-in-container">
                <form asp-action="Index">
                    <h1>Sign in</h1>
                    <input asp-for="CustomerEmail" id="email" type="email" placeholder="Email" />
                    <input asp-for="Password" id="pwd" type="password" placeholder="Password" />
                    <a href="#">Forgot your password?</a>
                    <button type="submit" value="">Sign In </button>
                </form>
            </div>

            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back!</h1>
                        <p>To keep shopping with us</p>
                        <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Hello, Shopper!</h1>
                        <p>Enter your personal details and start journey of shopping with us!</p>
                        <button class="ghost" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/js/login.js"></script>
    </body>
</html>
