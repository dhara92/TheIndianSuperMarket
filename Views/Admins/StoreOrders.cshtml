                        <ul class="sub-menu children ">
                            <li><i class="fa fa-book"></i><a asp-controller="Admins" asp-action="ProductCategories">Product Categories</a></li>
                            <li><i class="fa fa-briefcase"></i><a asp-controller="Admins" asp-action="Products">Products</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown show">
                        <a href="#" class="dropdown-toggle"> <i class="menu-icon fa fa-shopping-cart"></i>Orders</a>
                        <ul class="sub-menu children ">
                            <li><i class="fa fa-shopping-cart"></i><a asp-controller="Admins" asp-action="CustomerOrders">Customer Orders</a></li>
                            <li><i class="ti ti-shopping-cart-full"></i><a asp-controller="Admins" asp-action="StoreOrders">Store Orders</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown show">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-group"></i>Stackholders</a>
                        <ul class="sub-menu children">
                            <li><i class="menu-icon ti ti-id-badge"></i><a asp-controller="Admins" asp-action="Administrator">Administrator</a></li>
                            <li><i class="menu-icon fa fa-user"></i><a asp-controller="Admins" asp-action="Supplier">Suppliers</a></li>
                            <li><i class="menu-icon fa fa-user"></i><a asp-controller="Admins" asp-action="Customers">Customers</a></li>
                        </ul>
                    </li>

                    <li class="menu-title">Extras</li><!-- /.menu-title -->
                    <li class="menu-item-has-children dropdown show">
                        <a href="#"> <i class="menu-icon fa fa-glass"></i>Pages</a>
