                                            <td>29-FEB-2020</td>
                                        </tr>
                                        <tr>
                                            <td>123546</td>
                                            <td>Deep Frozen Foods</td>
                                            <td>CA$ 1000.78</td>
                                            <td>24-FEB-2020</td>
                                            <td>28-FEB-2020</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


        <div class="clearfix"></div>

        <footer class="site-footer">
            <div class="footer-inner bg-white">
                <div class="row">
                    <div class="col-sm-6">
                        Copyright &copy; 2020
                    </div>
                    <div class="col-sm-6 text-right">
                        Designed by <a href="#">Lazy Coder</a>
                    </div>
                </div>
            </div>
        </footer>

